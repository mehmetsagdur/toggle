{
  "name": "feature-flag-system",
  "version": "0.1.0",
  "private": true,
  "description": "Multi-tenant Feature Flag Management System",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "pnpm --parallel --filter './apps/*' dev",
    "build": "pnpm --filter './apps/*' build",
    "lint": "pnpm --parallel --filter './apps/*' lint",
    "test": "pnpm --parallel --filter './apps/*' test",
    "db:migrate": "pnpm --filter @feature-flag/backend prisma migrate dev",
    "db:generate": "pnpm --filter @feature-flag/backend prisma generate",
    "db:studio": "pnpm --filter @feature-flag/backend prisma studio",
    "db:seed": "pnpm --filter @feature-flag/backend prisma db seed",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "clean": "rm -rf node_modules apps/*/node_modules apps/*/.next apps/*/dist"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "typescript": "^5.7.0",
    "prettier": "^3.4.0",
    "eslint": "^9.17.0"
  }
}
